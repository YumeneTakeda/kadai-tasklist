<% if @users.any? %>

    <ul>
        <% @users.each do |user| %>
            <li>
                <img src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
                <%= user.name %>
                <p><%= link_to "View profile", user_path(user) %></p>
            </li>
        <% end %>
    </ul>
    <%= link_to "Sign up now!", signup_path %>
<%= paginate @users  %>
<% end %>